[Unit]
Description=Kalite server

[Service]
User={{ username }}
Group={{ group }}
Environment="KALITE_PYTHON={{ kalite_env }}/bin/python"
Environment="KALITE_HOME={{ kalite_root }}"
ExecStart={{ kalite_env }}/bin/kalite start --foreground
ExecStop={{ kalite_env }}/bin/kalite stop
Restart=always
TimeoutStopSec=60
PIDFile=/run/kalite.pid
KillSignal=SIGINT
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

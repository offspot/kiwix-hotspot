[Unit]
Description=Parsoid server

[Service]
WorkingDirectory={{ parsoid_root }}
ExecStart=/usr/bin/node bin/server.js
Restart=always
TimeoutStopSec=60
PIDFile=/run/parsoid.pid
KillSignal=SIGINT
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

